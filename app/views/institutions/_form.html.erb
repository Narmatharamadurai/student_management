<%= form_with(model: institution, local: true) do |form| %>
  <% if institution.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(institution.errors.count, "error") %> prohibited this institution from being saved:</h2>

      <ul>
      <% institution.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <label for="name" class="control-label col-sm-3"> Name:</label>
    <div class="col-sm-8">
      <%= form.text_field :name %>
    </div>
  </div>

  <div class="form-group row">
    <label for="name" class="control-label col-sm-3"> Address:</label>
    <div class="col-sm-8">
      <%= form.text_area :address %>
    </div>
  </div>

  <div class="form-group row">
    <label for="name" class="control-label col-sm-3"> Phone:</label>
    <div class="col-sm-8">
      <%= form.text_field :phone %>
    </div>
  </div>
  <div class="form-group row">
    <label for="country" class="control-label col-sm-3">Country:</label>
    <div class="col-sm-8">
        <%#= collection_select("institution", "country", { include_blank: 'Select a country' })%>
        <%= collection_select(:institution, :country_id, Country.all, :id, :country_name,
                 {:prompt => 'Please select the country'})%>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
