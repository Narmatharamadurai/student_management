
<%= form_with(model: student, local: true) do |form| %>
  <% if student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
      <% student.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  

  <div class="form-group row">
    <label for="fullname" class="control-label col-sm-3">Full Name:</label>
    <div class="col-sm-8">
        <%= form.text_field :full_name %>
    </div>
  </div>

  <div class="form-group row">
    <label for="address" class="control-label col-sm-3">Address:</label>
    <div class="col-sm-8">
      <%= form.text_area :address %>
    </div>
  </div>

  <div class="form-group row">
    <label for="mobile" class="control-label col-sm-3">Mobile:</label>
    <div class="col-sm-8">
      <%= form.text_field :mobile %>
    </div>
  </div>

  <div class="form-group row">
    <label for="institution" class="control-label col-sm-3">Institution:</label>
    <div class="col-sm-8">
      <%= form.select :institution_id, options_from_collection_for_select(Institution.all, :id, :name, @student.institution.try(:id)) %>
    </div>
  </div>

  <div class="form-group row">
    <label for="country" class="control-label col-sm-3">Country:</label>
    <div class="col-sm-8">
      <%#= country_select("student", "country", { include_blank: 'Select a country' }, { class: 'country-select-box' })%>
     <%= collection_select(:student, :country_id, Country.all,
                  :id, :country_name,
                 {:prompt => 'Please select the country'})%>
    </div>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
